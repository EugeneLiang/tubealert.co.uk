{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "API Gateway as proxy to lambda functions (subscribe, unsubscribe)",
    "Parameters": {
        "AllLambdaArn": {
            "Description": "The name of Lambda Function for getting the current status of all",
            "Type": "String"
        },
        "SubscribeLambdaArn": {
            "Description": "The name of Lambda Function for subscribing",
            "Type": "String"
        },
        "UnsubscribeLambdaArn": {
            "Description": "The name of Lambda Function for unsubscribing",
            "Type": "String"
        }
    },
    "Resources": {
        "AllGetMethod": {
            "Properties": {
                "ApiKeyRequired": false,
                "AuthorizationType": "NONE",
                "HttpMethod": "GET",
                "Integration": {
                    "IntegrationHttpMethod": "POST",
                    "Type": "AWS_PROXY",
                    "Uri": {
                        "Fn::Join": [
                            "",
                            [
                                "arn:aws:apigateway:eu-west-2:lambda:path/2015-03-31/functions/",
                                {
                                    "Ref": "AllLambdaArn"
                                },
                                "/invocations"
                            ]
                        ]
                    }
                },
                "MethodResponses": [
                    {
                        "ResponseParameters": {
                            "method.response.header.Access-Control-Allow-Origin": true
                        },
                        "StatusCode": "200"
                    }
                ],
                "ResourceId": {
                    "Ref": "TubeAlertApiAllResource"
                },
                "RestApiId": {
                    "Ref": "TubeAlertApi"
                }
            },
            "Type": "AWS::ApiGateway::Method"
        },
        "AllLambdaPermission": {
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Ref": "AllLambdaArn"
                },
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:execute-api:",
                            {
                                "Ref": "AWS::Region"
                            },
                            ":",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":",
                            {
                                "Ref": "TubeAlertApi"
                            },
                            "/*/*/*"
                        ]
                    ]
                }
            },
            "Type": "AWS::Lambda::Permission"
        },
        "Deployment": {
            "DependsOn": [
                "SubscribePostMethod",
                "UnsubscribePostMethod",
                "AllGetMethod"
            ],
            "Properties": {
                "RestApiId": {
                    "Ref": "TubeAlertApi"
                },
                "StageName": "prod"
            },
            "Type": "AWS::ApiGateway::Deployment"
        },
        "SubscribeLambdaPermission": {
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Ref": "SubscribeLambdaArn"
                },
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:execute-api:",
                            {
                                "Ref": "AWS::Region"
                            },
                            ":",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":",
                            {
                                "Ref": "TubeAlertApi"
                            },
                            "/*/*/*"
                        ]
                    ]
                }
            },
            "Type": "AWS::Lambda::Permission"
        },
        "SubscribePostMethod": {
            "Properties": {
                "ApiKeyRequired": false,
                "AuthorizationType": "NONE",
                "HttpMethod": "POST",
                "Integration": {
                    "IntegrationHttpMethod": "POST",
                    "Type": "AWS_PROXY",
                    "Uri": {
                        "Fn::Join": [
                            "",
                            [
                                "arn:aws:apigateway:eu-west-2:lambda:path/2015-03-31/functions/",
                                {
                                    "Ref": "SubscribeLambdaArn"
                                },
                                "/invocations"
                            ]
                        ]
                    }
                },
                "MethodResponses": [
                    {
                        "ResponseParameters": {
                            "method.response.header.Access-Control-Allow-Credentials": false,
                            "method.response.header.Access-Control-Allow-Origin": false,
                            "method.response.header.Set-Cookie": false
                        },
                        "StatusCode": "200"
                    }
                ],
                "ResourceId": {
                    "Ref": "TubeAlertApiSubscribeResource"
                },
                "RestApiId": {
                    "Ref": "TubeAlertApi"
                }
            },
            "Type": "AWS::ApiGateway::Method"
        },
        "TubeAlertApi": {
            "Properties": {
                "Description": "The API for subscribing and unsubscribing for tubealert.co.uk",
                "Name": "TubeAlertApi"
            },
            "Type": "AWS::ApiGateway::RestApi"
        },
        "TubeAlertApiAllResource": {
            "Properties": {
                "ParentId": {
                    "Fn::GetAtt": [
                        "TubeAlertApi",
                        "RootResourceId"
                    ]
                },
                "PathPart": "all",
                "RestApiId": {
                    "Ref": "TubeAlertApi"
                }
            },
            "Type": "AWS::ApiGateway::Resource"
        },
        "TubeAlertApiSubscribeResource": {
            "Properties": {
                "ParentId": {
                    "Fn::GetAtt": [
                        "TubeAlertApi",
                        "RootResourceId"
                    ]
                },
                "PathPart": "subscribe",
                "RestApiId": {
                    "Ref": "TubeAlertApi"
                }
            },
            "Type": "AWS::ApiGateway::Resource"
        },
        "TubeAlertApiUnsubscribeResource": {
            "Properties": {
                "ParentId": {
                    "Fn::GetAtt": [
                        "TubeAlertApi",
                        "RootResourceId"
                    ]
                },
                "PathPart": "unsubscribe",
                "RestApiId": {
                    "Ref": "TubeAlertApi"
                }
            },
            "Type": "AWS::ApiGateway::Resource"
        },
        "UnsubscribeLambdaPermission": {
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Ref": "UnsubscribeLambdaArn"
                },
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:execute-api:",
                            {
                                "Ref": "AWS::Region"
                            },
                            ":",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":",
                            {
                                "Ref": "TubeAlertApi"
                            },
                            "/*/*/*"
                        ]
                    ]
                }
            },
            "Type": "AWS::Lambda::Permission"
        },
        "UnsubscribePostMethod": {
            "Properties": {
                "ApiKeyRequired": false,
                "AuthorizationType": "NONE",
                "HttpMethod": "POST",
                "Integration": {
                    "IntegrationHttpMethod": "POST",
                    "Type": "AWS_PROXY",
                    "Uri": {
                        "Fn::Join": [
                            "",
                            [
                                "arn:aws:apigateway:eu-west-2:lambda:path/2015-03-31/functions/",
                                {
                                    "Ref": "UnsubscribeLambdaArn"
                                },
                                "/invocations"
                            ]
                        ]
                    }
                },
                "MethodResponses": [
                    {
                        "ResponseParameters": {
                            "method.response.header.Access-Control-Allow-Origin": true
                        },
                        "StatusCode": "200"
                    }
                ],
                "ResourceId": {
                    "Ref": "TubeAlertApiUnsubscribeResource"
                },
                "RestApiId": {
                    "Ref": "TubeAlertApi"
                }
            },
            "Type": "AWS::ApiGateway::Method"
        }
    }
}
